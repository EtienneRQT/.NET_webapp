@page
@model pizza_mama.Pages.MenuPizzaModel
@{
    ViewData["Title"] = "MenuPizza";
}

<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/css/style.css" />
    <title>Pizza Mama</title>
</head>
<body>

<a asp-page="Index"><img class="logo" src="images/small_logo.png" alt="logo" /></a>
<div class="menu_title">
    <h1>Les Pizzas</h1>
</div>

<div class="menu_list">
    @foreach (var pizza in Model.Pizza)
    {
        <div class="menu_list_item">
            <span class="menu_list_title">@pizza.nom</span>
            <span class="menu_list_price">@String.Format("{0:0.00}", pizza.prix) €</span>
            <span class="menu_list_ingredients">@pizza.ingredients</span>
            @if (pizza.vegetarienne)
            {
                <span class="menu_list_badge">Végétarienne</span>
            }
           
        </div>
    }
</div>
</body>
</html>